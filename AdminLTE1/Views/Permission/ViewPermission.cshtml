
@model IEnumerable<AdminLTE1.ViewModels.PermissionViewModel>
@{
    ViewData["Title"] = "View Permissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Any())
{
    <div class="col-md-12">
        <div class="card">

            <div class="card-body p-0">
                <table id="idgrid" class="table">
                    <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Permission Id</th>
                            <th>Name</th>
                            <th>Path</th>
                            <th>ParentId</th>
                            <th>MenuLevel</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var menu in Model)
                        {
                            <tr>
                                <td><input type="checkbox" disabled value="@menu.Id" checked="@menu.HasAccess" /></td>
                                <td>@menu.Id</td>
                                <td>@menu.Name</td>
                                <td>@menu.Path</td>
                                <td>@menu.ParentId</td>
                                <td>@menu.MenuLevel</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
          
        </div>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
